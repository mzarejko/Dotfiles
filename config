# 2B2928 Start i3bar to display a workspace bar (plus the system information i3status
bar {
    status_command i3blocks -c ~/.i3/i3blocks.conf
	colors {
		# Whole color settings
		background $bg-color
		statusline #ebdbb2
		separator  #666666

		#                   border              background          text
		focused_workspace   #6E4429           $bg-color           $inactive-text-color
		inactive_workspace  $bg-color           $bg-color           $text-color
		urgent_workspace    $urgent-bg-color    $urgent-bg-color    $text-color

	}
    position top
}



